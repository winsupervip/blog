
<div class="mt-4"><h3>Chỉnh sửa khóa học</h3><form
    class="mt-4"
    method="post"
    action="/courses/{{course._id}}?_method=PUT"
  >


    <div class="form-group">
<label for="name">name</label>
      <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" />
    </div>

    <div class="form-group">
<label for="desc">desc</label>
      <textarea
        
        class="form-control"
       
        id="desc"
        name="desc"
      >{{course.desc}}</textarea>
    </div>

    <div class="form-group">
<label for="videoId">videoId</label>
      <input
        type="text"
        class="form-control"
        value="{{course.videoId}}"
        id="videoId"
        name="videoId"
      />
    </div>

    <div class="form-group">
<label for="level">level</label>
      <input
        type="text"
        class="form-control"
        value="{{course.level}}"
        id="level"
        name="level"
      />
    </div>

    <div class="form-group mt-4">
      <button type="submit" class="btn btn-primary mb-3">Confirm</button>
    </div>
  </form>
  </div>
  